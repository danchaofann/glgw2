<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="49dp"
        android:orientation="vertical">

        <include layout="@layout/activity_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:paddingTop="22dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="#FFFF7214" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="基本信息"
                            android:textColor="#FF15223F"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单据类型"
                            android:textColor="#FF91959F"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_document_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="38dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="日期"
                            android:textColor="#FF91959F"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="66dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="销售组织"
                            android:textColor="#FF91959F"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_sales_organization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="38dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="客户经理"
                            android:textColor="#FF91959F"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_account_manager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="38dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="信息编号"
                            android:textColor="#FF91959F"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_message_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="38dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="跟单编号"
                            android:textColor="#FF91959F"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_document_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="38dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:paddingTop="22dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="#FFFF7214" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="客户信息"
                            android:textColor="#FF15223F"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="客户姓名"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_customer_name"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_marginLeft="38dp"
                            android:background="@drawable/gray_line_shape"
                            android:paddingLeft="13dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系方式"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_marginLeft="38dp"
                            android:background="@drawable/gray_line_shape"
                            android:paddingLeft="13dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="公司名称"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/tv_company"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_marginLeft="38dp"
                            android:background="@drawable/gray_line_shape"
                            android:paddingLeft="13dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收货地址"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_marginLeft="38dp"
                            android:background="@drawable/gray_line_shape"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_shipping_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="13dp"
                                android:layout_weight="1"
                                android:text="浙江省宁波市鄞州区"
                                android:textColor="#FF343434"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="6dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="15dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="详细地址"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/tv_address"
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:layout_marginLeft="38dp"
                            android:background="@drawable/gray_line_shape"
                            android:gravity="top"
                            android:paddingLeft="14dp"
                            android:paddingTop="12dp"
                            android:text="单据类型"
                            android:textColor="#FF333333"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:paddingTop="22dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="#FFFF7214" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:layout_weight="1"
                            android:text="物资明细"
                            android:textColor="#FF15223F"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看详情"
                            android:textColor="#FF9A9A9A"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="2dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_product_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:nestedScrollingEnabled="false" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/ll_add_product"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/gray_round_shape"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:text="添加商品"
                            android:textColor="#FFA6A6A6"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingLeft="14dp"
                    android:paddingTop="22dp"
                    android:paddingRight="14dp"
                    android:paddingBottom="15dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="3dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center"
                            android:background="#FFFF7214" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="其他信息"
                            android:textColor="#FF15223F"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="收款条件"
                            android:textColor="#333"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/et_payment_terms"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/gray_line_shape"
                            android:gravity="center_vertical"
                            android:paddingLeft="13dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否含运费"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:id="@+id/ll_shipping"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_marginLeft="6dp"
                            android:paddingLeft="13dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@drawable/gray_line_shape">
                            <TextView
                                android:id="@+id/tv_shipping"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="否"
                                android:textColor="#333"
                                android:textSize="14sp"
                                android:gravity="center_vertical"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="13dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否含安装"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:id="@+id/ll_installation"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_marginLeft="6dp"
                            android:paddingLeft="13dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@drawable/gray_line_shape">
                            <TextView
                                android:id="@+id/tv_installation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="否"
                                android:textColor="#333"
                                android:textSize="14sp"
                                android:gravity="center_vertical"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="13dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="是否含税"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:id="@+id/ll_tax"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="13dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@drawable/gray_line_shape">
                            <TextView
                                android:id="@+id/tv_tax"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="否"
                                android:textColor="#333"
                                android:textSize="14sp"
                                android:gravity="center_vertical"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="13dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="到货时间"
                            android:textColor="#333"
                            android:textSize="14sp"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:id="@+id/ll_arrival_time"
                            android:layout_width="match_parent"
                            android:layout_height="39dp"
                            android:layout_marginLeft="20dp"
                            android:paddingLeft="13dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:background="@drawable/gray_line_shape">
                            <TextView
                                android:id="@+id/tv_arrival_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="否"
                                android:textColor="#333"
                                android:textSize="14sp"
                                android:gravity="center_vertical"/>

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="6dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="13dp"/>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/tv_copy_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="跟单详情"
            android:background="@color/white"
            android:textColor="#FF232A3B"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="提交询价单"
            android:background="#FFFF7214"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>
</FrameLayout>