<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:paddingBottom="10dp"
        android:orientation="vertical">

        <include layout="@layout/activity_toolbar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="96dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/work_bg" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="23dp"
                        android:layout_marginRight="14dp"
                        android:background="@drawable/white_shape"
                        android:orientation="vertical"
                        android:paddingLeft="12dp"
                        android:paddingTop="17dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_gravity="center" />

                            <TextView
                                android:id="@+id/tv_company"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:layout_weight="1"
                                android:text="宁波益工网络科技有限公司"
                                android:textColor="#FF333333"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tv_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="待报价"
                                android:textColor="#FFFF7214"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="19dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="销售员姓名"
                                android:textColor="#999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_sale_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:text="销售员姓名"
                                android:textColor="#333"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="41dp"
                                android:text="联系电话"
                                android:textColor="#999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_sale_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="9dp"
                                android:text="销售员姓名"
                                android:textColor="#333"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="提交时间"
                                android:textColor="#999"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_submission_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="21dp"
                                android:layout_weight="1"
                                android:text="销售员姓名"
                                android:textColor="#333"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_copy_details"
                                android:layout_width="70dp"
                                android:layout_height="24dp"
                                android:background="@drawable/gray_round_shape"
                                android:gravity="center"
                                android:text="跟单详情"
                                android:textColor="#FF15223F"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/white_shape"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp"
                        android:text="流程进度"
                        android:textColor="#15223F"
                        android:textSize="16sp" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="18dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginBottom="14dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/iv_rights_protection1"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp" />

                                        <View
                                            android:id="@+id/view_line1"
                                            android:layout_width="25dp"
                                            android:layout_height="1dp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="5dp"
                                            android:background="#FF6600" />

                                    </LinearLayout>


                                    <TextView
                                        android:id="@+id/tv_name1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:text="待发送"
                                        android:textColor="#333"
                                        android:textSize="13sp"
                                        android:layout_gravity="center"/>

                                    <TextView
                                        android:id="@+id/tv_pending_order"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:text=""
                                        android:textColor="#999"
                                        android:textSize="10sp"
                                        android:layout_gravity="center"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <View
                                            android:id="@+id/view_left_line2"
                                            android:layout_width="25dp"
                                            android:layout_height="1dp"
                                            android:layout_gravity="center"
                                            android:layout_marginRight="5dp"
                                            android:background="#FF6600" />

                                        <ImageView
                                            android:id="@+id/iv_rights_protection2"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp" />

                                        <View
                                            android:id="@+id/view_right_line2"
                                            android:layout_width="25dp"
                                            android:layout_height="1dp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="5dp"
                                            android:background="#FF6600" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_name2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp"
                                        android:text="待签单"
                                        android:textColor="#333"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/tv_pending_declaration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:text=""
                                        android:textColor="#999"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <View
                                            android:id="@+id/view_left_line3"
                                            android:layout_width="25dp"
                                            android:layout_height="1dp"
                                            android:layout_gravity="center"
                                            android:layout_marginRight="5dp"
                                            android:background="#FF6600" />

                                        <ImageView
                                            android:id="@+id/iv_rights_protection3"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp" />

                                        <View
                                            android:id="@+id/view_right_line3"
                                            android:layout_width="25dp"
                                            android:layout_height="1dp"
                                            android:layout_gravity="center"
                                            android:layout_marginLeft="5dp"
                                            android:background="#E3E2E8" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_name3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp"
                                        android:text="业务完成"
                                        android:textColor="#333"
                                        android:textSize="13sp" />

                                    <TextView
                                        android:id="@+id/tv_quoted"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="5dp"
                                        android:text=""
                                        android:textColor="#999"
                                        android:textSize="10sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <View
                                            android:id="@+id/view_line4"
                                            android:layout_width="25dp"
                                            android:layout_height="1dp"
                                            android:layout_gravity="center"
                                            android:layout_marginRight="5dp"
                                            android:background="#E3E2E8" />

                                        <ImageView
                                            android:id="@+id/iv_rights_protection4"
                                            android:layout_width="24dp"
                                            android:layout_height="24dp" />

                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_name4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="8dp"
                                        android:text="已下推"
                                        android:textColor="#333"
                                        android:textSize="13sp"/>

                                    <TextView
                                        android:id="@+id/tv_adjusted"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginTop="5dp"
                                        android:text=""
                                        android:textColor="#999"
                                        android:textSize="10sp" />
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_document_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/white_shape"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingTop="16dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="单据明细"
                        android:textColor="#FF15223F"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="查看明细"
                        android:textColor="#999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/white_shape"
                    android:orientation="vertical"
                    android:paddingLeft="12dp"
                    android:paddingTop="16dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="16dp">

                    <LinearLayout
                        android:id="@+id/ll_material_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="物资明细"
                            android:textColor="#FF15223F"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="查看明细"
                            android:textColor="#999"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_width="6dp"
                            android:layout_height="10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_sale_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"
                            android:descendantFocusability="afterDescendants"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right"
                        android:layout_marginTop="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总毛利率"
                            android:textColor="#999"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/tv_gross_margin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00%"
                            android:textColor="#FFFF7113"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="总计"
                            android:textColor="#999"
                            android:textSize="12sp"
                            android:layout_marginLeft="8dp"/>
                        <TextView
                            android:id="@+id/tv_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥68.0"
                            android:textColor="#FFFF7113"
                            android:textSize="16sp"
                            android:layout_marginLeft="6dp"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同预览"
                        android:textColor="#999"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_contract"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《合同一》"
                        android:textColor="#FF353FF4"
                        android:textSize="12sp"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_send_quote"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/btn_yellow_shape"
                    android:text="发送报价"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_edit_quote"
            android:layout_width="84dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_line_shape"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#FF15223F"
            android:text="编辑报价"/>

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="84dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/yellow_line_shape"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#FFFF7214"
            android:text="联系供应链"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="14dp"/>
    </LinearLayout>
</FrameLayout>