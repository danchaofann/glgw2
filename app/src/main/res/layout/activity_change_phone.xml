<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/activity_toolbar"/>

    <TextView
        android:id="@+id/tv_bind_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已绑号码134****0987"
        android:textSize="12sp"
        android:textColor="#FF91959F"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新手机号"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"/>

            <EditText
                android:id="@+id/et_new_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="38dp"
                android:hint="请输入新手机号码"
                android:textSize="14sp"
                android:textColor="#333"
                android:textColorHint="#FF91959F"
                android:background="@null"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF2F2F2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="17dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"/>

            <EditText
                android:id="@+id/et_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="52dp"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:textColor="#333"
                android:textColorHint="#FF91959F"
                android:background="@null"/>

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:textColor="#FFFF6600"
                android:textSize="14sp"
                android:layout_marginRight="15dp"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFF2F2F2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="17dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录密码"
                android:textColor="#333"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_marginLeft="14dp"/>

            <EditText
                android:id="@+id/et_passowrd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="38dp"
                android:hint="请输入登录密码"
                android:textSize="14sp"
                android:textColor="#333"
                android:textColorHint="#FF91959F"
                android:background="@null"/>

            <ImageView
                android:id="@+id/tv_watch"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_marginRight="14dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/btn_yellow_shape"
        android:layout_marginTop="32dp"
        android:text="确定"
        android:textSize="16sp"
        android:textColor="@color/white"/>
</LinearLayout>