<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="263dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="29dp"
        android:paddingLeft="14dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="毛利润额区间"
            android:textSize="16sp"
            android:textColor="#333"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="90dp">
            <EditText
                android:id="@+id/et_gross_start"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/search_bg_shape"
                android:gravity="center"
                android:hint="输入..."
                android:textColor="#999999"
                android:textSize="12sp"
                android:inputType="numberDecimal"/>

            <View
                android:layout_width="19dp"
                android:layout_height="1dp"
                android:background="#E2E2E2"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/et_gross_end"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/search_bg_shape"
                android:gravity="center"
                android:hint="输入..."
                android:textColor="#999999"
                android:textSize="12sp"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订单金额区间"
            android:textSize="16sp"
            android:textColor="#333"
            android:layout_marginTop="21dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="90dp">
            <EditText
                android:id="@+id/et_order_start"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/search_bg_shape"
                android:gravity="center"
                android:hint="输入..."
                android:textColor="#999999"
                android:textSize="12sp"
                android:inputType="numberDecimal"/>

            <View
                android:layout_width="19dp"
                android:layout_height="1dp"
                android:background="#E2E2E2"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/et_order_end"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:background="@drawable/search_bg_shape"
                android:gravity="center"
                android:hint="输入..."
                android:textColor="#999999"
                android:textSize="12sp"
                android:inputType="numberDecimal"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_reset"
                android:layout_width="116dp"
                android:layout_height="36dp"
                android:background="@drawable/gray_fitter_shape"
                android:gravity="center"
                android:text="重置"
                android:textSize="14sp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_determine"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/btn_yellow_shape"
                android:gravity="center"
                android:text="确定"
                android:textSize="14sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="14dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>