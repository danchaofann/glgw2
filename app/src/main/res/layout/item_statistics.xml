<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_shape"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="货品名称"
            android:textSize="12sp"
            android:textColor="#343434"
            android:paddingTop="9dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="贴纸（不干胶） 贴纸（不干胶） 贴纸（不干胶）"
            android:layout_marginTop="8dp"
            android:textColor="#343434"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="采购共  "
                android:textSize="13sp"
                android:textColor="#343434"/>
            <TextView
                android:id="@+id/tv_buy_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="13sp"
                android:textColor="#FF7214"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  种"
                android:textSize="13sp"
                android:textColor="#343434"/>
            <TextView
                android:id="@+id/tv_buy_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="13sp"
                android:textColor="#FF7214"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="  件"
                android:textSize="13sp"
                android:textColor="#343434"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户  "
                android:textSize="13sp"
                android:textColor="#343434"/>

            <TextView
                android:id="@+id/tv_client"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户"
                android:textSize="13sp"
                android:textColor="#FF7214"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_buttom_shape"
            android:orientation="vertical"
            android:paddingBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gray_statistics_shape"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单金额"
                        android:textColor="#9A9A9A"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#343434"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/tv_order_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="66"
                        android:textColor="#343434"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/gray_statistics_shape"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="毛利润额"
                        android:textColor="#9A9A9A"
                        android:textSize="12sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="#343434"
                        android:textSize="12sp"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/tv_gross_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="66"
                        android:textColor="#343434"
                        android:textSize="16sp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属销售"
                    android:textSize="12sp"
                    android:textColor="#9A9A9A"/>

                <TextView
                    android:id="@+id/tv_owned_sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属销售"
                    android:textSize="12sp"
                    android:textColor="#343434"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单编号"
                    android:textSize="12sp"
                    android:textColor="#9A9A9A"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_order_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属销售"
                    android:textSize="12sp"
                    android:textColor="#343434"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/tv_copy"
                    android:layout_width="46dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="复制"
                    android:textColor="#162240"
                    android:textSize="11sp"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/copy_shape"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签单时间"
                    android:textSize="12sp"
                    android:textColor="#9A9A9A"/>

                <TextView
                    android:id="@+id/tv_signing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所属销售"
                    android:textSize="12sp"
                    android:textColor="#343434"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>