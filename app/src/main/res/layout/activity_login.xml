<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:padding="7dp"
            android:src="@mipmap/close"
            android:layout_marginRight="14dp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_bg"
            android:layout_gravity="right"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="80dp"
                    android:text="您好，"
                    android:textColor="#333333"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="欢迎来到工来工往"
                    android:textColor="#333333"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="57dp"
                    android:layout_marginRight="23dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_account"
                        android:layout_width="16dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/person"/>

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入登录账号"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#333"
                        android:textColorHint="#999999"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/iv_clear"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:padding="6dp"
                        android:src="@mipmap/circle_close"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:background="#F2F2F2"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:id="@+id/ll_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="23dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_password"
                        android:layout_width="16dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/password"/>

                    <EditText
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入登录密码"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#333"
                        android:textColorHint="#999999"
                        android:textSize="16sp"
                        android:inputType="textPassword"/>

                    <CheckBox
                        android:id="@+id/iv_eye"
                        android:layout_width="18dp"
                        android:layout_height="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/selector_login_change_psw"
                        android:button="@null" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="23dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="17dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/code"/>

                    <EditText
                        android:id="@+id/et_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:paddingLeft="15dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#333"
                        android:textColorHint="#999999"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_get_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="获取验证码"
                        android:textColor="#333"
                        android:textSize="13sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:background="#F2F2F2"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:id="@+id/ll_retrieve_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="23dp"
                    android:orientation="horizontal"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="找回密码"
                        android:textColor="#7B7E84"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:src="@mipmap/right_back"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="26dp"
                    android:layout_marginRight="23dp"
                    android:background="@drawable/btn_yellow_shape"
                    android:text="登录"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_code"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="23dp"
                    android:background="@drawable/btn_gray_shape"
                    android:text="手机验证码登录"
                    android:textColor="#999999"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="为保障您的个人隐私权益，请在登录前仔细阅读工来工往"
                    android:textColor="#999"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_service_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务协议"
                        android:textColor="#4771F6"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  和  "
                        android:textColor="#999"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_privacy_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="隐私协议"
                        android:textColor="#4771F6"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="如需帮助请咨询客服：400-033-8680"
                    android:textColor="#9095A0"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="50dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="20dp"
                    android:src="@mipmap/boda"/>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>
</LinearLayout>