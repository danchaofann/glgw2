<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="销售"
        android:textColor="#343434"
        android:textSize="18sp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_bg"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@mipmap/sale_work_bg"
                    android:scaleType="fitXY"/>

                <LinearLayout
                    android:id="@+id/ll_statistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/white_shape"
                    android:elevation="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="15dp">
                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/tongji"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数据统计"
                            android:textSize="14sp"
                            android:textColor="#162240"
                            android:layout_marginLeft="6dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="进入查看月、年等数据"
                            android:textSize="12sp"
                            android:textColor="#9296A0"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tv_total_order"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="400"
                                android:textSize="18sp"
                                android:textColor="#162240"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单总数"
                                android:textColor="#9296A0"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="43dp"
                            android:background="#F2F2F2"
                            android:layout_gravity="center"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tv_total_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="400"
                                android:textSize="18sp"
                                android:textColor="#162240"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="订单总额"
                                android:textColor="#9296A0"
                                android:textSize="12sp"
                                android:layout_marginTop="10dp"/>
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="43dp"
                            android:background="#F2F2F2"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/quxian"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合同审批"
                android:textColor="#9296A0"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="14dp"/>
            <RelativeLayout
                android:id="@+id/rl_approve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/sale_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/ll_pending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:paddingTop="18dp"
                    android:paddingBottom="20dp">
                    <TextView
                        android:id="@+id/tv_pending"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待审批"
                        android:textSize="12sp"
                        android:layout_marginTop="13dp"
                        android:textColor="#FFD2E7FB"/>
                </LinearLayout>
                <View
                    android:id="@+id/view_pending"
                    android:layout_width="0.5dp"
                    android:layout_height="19dp"
                    android:background="@color/white"
                    android:layout_toRightOf="@+id/ll_pending"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"/>

                <LinearLayout
                    android:id="@+id/ll_approval_rejected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="23dp"
                    android:layout_toRightOf="@+id/view_pending"
                    android:paddingTop="18dp"
                    android:paddingBottom="20dp">
                    <TextView
                        android:id="@+id/tv_approval_rejected"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="审批驳回"
                        android:textSize="12sp"
                        android:layout_marginTop="13dp"
                        android:textColor="#FFD2E7FB"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_approve"
                    android:layout_width="64dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="28dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/btn_partner_shape">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去审批"
                        android:textSize="11sp"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:layout_width="4dp"
                        android:layout_height="8dp" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销售功能"
                android:textColor="#9296A0"
                android:textSize="12sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="14dp"/>

            <LinearLayout
                android:id="@+id/ll_inquiry_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_shape"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingTop="14dp"
                android:paddingBottom="15dp">
                <LinearLayout
                    android:id="@+id/ll_inquiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingRight="14dp"
                    android:paddingLeft="15dp">
                    <TextView
                        android:id="@+id/tv_type1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="询价管理"
                        android:textColor="#333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部"
                        android:textSize="12sp"
                        android:textColor="#91959F"/>
                    
                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="1dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_inquiry_management"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="18dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_sales_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_shape"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingTop="14dp"
                android:paddingBottom="15dp">
                <LinearLayout
                    android:id="@+id/ll_sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="14dp">
                    <TextView
                        android:id="@+id/tv_type2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="销售管理"
                        android:textColor="#333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部"
                        android:textSize="12sp"
                        android:textColor="#91959F"/>

                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="9dp"
                        android:layout_marginLeft="1dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_sales_management"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="18dp"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/white_shape"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:paddingTop="14dp"
                android:paddingBottom="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="14dp">
                    <TextView
                        android:id="@+id/tv_type3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="创建"
                        android:textColor="#333333"
                        android:textSize="14sp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_create"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="18dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>